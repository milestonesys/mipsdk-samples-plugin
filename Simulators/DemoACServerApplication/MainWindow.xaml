<Window x:Class="DemoServerApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Views="clr-namespace:DemoServerApplication.UI.Views"
        xmlns:ViewModels="clr-namespace:DemoServerApplication.UI.ViewModels"
        AutomationProperties.AutomationId="mainDemoToolWindow"
        Title="Demo Access Control System Simulator"
        WindowStartupLocation="CenterScreen"
        Height="600"
        MinHeight="600"
        Width="1200"
        MinWidth="1200"
        Icon="Resources/demo_access_control_256.ico">
    
    <Grid>
        <TabControl AutomationProperties.AutomationId="tabsControl"
                    SelectedIndex="0"
                    ItemsSource="{Binding Tabs}">
            
            <TabControl.Resources>
                <DataTemplate DataType="{x:Type ViewModels:SwipeCardsTabViewModel}">
                    <Views:SwipeCardsTabView />
                </DataTemplate>
    
                <DataTemplate DataType="{x:Type ViewModels:AdministrationTabViewModel}">
                    <Views:AdministrationTabView />
                </DataTemplate>
            </TabControl.Resources>

            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock AutomationProperties.AutomationId="{Binding TabName}"
                               Text="{Binding TabName}" />
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>
    </Grid>
</Window>
