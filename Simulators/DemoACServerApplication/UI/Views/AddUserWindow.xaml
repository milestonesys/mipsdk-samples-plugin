<Window x:Class="DemoServerApplication.UI.Views.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add User" Height="165" Width="300"  WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Name:"/>

        <TextBox Text="{Binding UserName}"
                 Name="userName"
                 Grid.Row="1"
                 Margin="0,5,0,0"/>

        <TextBlock Grid.Row="2" 
                   Text="Password:"/>

        <TextBox Text="{Binding Password}"
                 Name="password"
                 Grid.Row="3"
                 Margin="0,5,0,0"/>

        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,5,0,0">

            <Grid IsEnabled="{Binding ElementName=password, Path=Text.Length, Mode=OneWay}">
                <Button Content="OK" 
                        MinWidth="80" 
                        Margin="0,0,5,0"
                        Command="{Binding OKCommand}"
                        IsEnabled="{Binding ElementName=userName, Path=Text.Length, Mode=OneWay}"/>
            </Grid>

            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    MinWidth="80" 
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
