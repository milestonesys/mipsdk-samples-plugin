<Window x:Class="DemoServerApplication.UI.Views.EditDoorControllerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Door Controller" Height="110" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox Text="{Binding DoorControllerName}"
                 Name="doorControllerName"
                 Grid.Row="0"/>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">

            <Button Content="OK" 
                    MinWidth="80" 
                    Margin="0,0,5,0"
                    Command="{Binding OKCommand}"
                    IsEnabled="{Binding ElementName=doorControllerName, Path=Text.Length, Mode=OneWay}"/>

            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    MinWidth="80" 
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
