<UserControl x:Class="DemoServerApplication.UI.Views.UsersOptionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Background="#FFE5E5E5"
          Margin="10">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <ListBox Grid.Row="0"
                     ItemsSource="{Binding Users}"
                     SelectedItem="{Binding SelectedUser}">
                
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Orientation="Horizontal" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Grid.Row="1"> 
                
                <Button Content="Add"
                        MinWidth="80"
                        Margin="0,0,10,0"
                        Command="{Binding AddUserCommand}"/>
                
                <Button Content="Delete"
                        MinWidth="80"
                        Command="{Binding DeleteUserCommand}"/>
            </StackPanel>
        </Grid>
        
        <GroupBox Grid.Column="1" 
                  Margin="10,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Vertical"
                                Grid.Row="0">
                        
                        <CheckBox Content="Administrator"
                                  Name="isAdministrator"
                                  IsChecked="{Binding IsAdministrator, Mode=TwoWay}"
                                  Margin="0,5,0,0" 
                                  HorizontalAlignment="Left" 
                                  Width="150" />

                        <TextBlock Margin="0,5,0,0" 
                                   Text="Name:"/>

                        <TextBox Text="{Binding UserName, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}" 
                                 Name="userName"
                                 Width ="150" 
                                 HorizontalAlignment="Left" />

                        <TextBlock Margin="0,5,0,0" 
                                   Text="Password:"/>

                        <TextBox Text="{Binding Password, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}" 
                                 Name="password"
                                 Width ="150" 
                                 HorizontalAlignment="Left" />
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=isAdministrator, Path=IsChecked, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Margin="0,5,0,0"
                                   Text="Visible doors:"/>

                        <ListBox Grid.Row="1" 
                                 ItemsSource="{Binding SelectedUserVisibleDoors}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding DoorName}" IsChecked="{Binding IsVisible, Mode=TwoWay}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>

                    <Grid Grid.Column="1"
                          Margin="10,0,0,0">
                        
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Margin="0,5,0,0"
                                   Grid.Row="0"
                                   Text="Visible event types:"/>

                        <ListBox ItemsSource="{Binding SelectedUserVisibleEventTypes}"
                                 Grid.Row="1">
                            
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding EventTypeName}" IsChecked="{Binding IsVisible}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>

                    <Grid Grid.Column="2"
                          Margin="10,0,0,0">
                        
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Margin="0,5,0,0" 
                                   Grid.Row="0"
                                   Text="Visible command types:"/>

                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding SelectedUserVisibleCommandTypes}">
                            
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding CommandName}" IsChecked="{Binding IsVisible}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Grid>

                <Grid IsEnabled="{Binding ElementName=userName, Path=Text.Length, Mode=OneWay}"
                      Grid.Row="2">

                    <Button Content="Save"
                            Width="80" 
                            IsEnabled="{Binding ElementName=password, Path=Text.Length, Mode=OneWay}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="{Binding SaveCommand}"/>
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
