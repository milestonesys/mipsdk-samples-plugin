<UserControl x:Class="DemoServerApplication.UI.Views.DoorManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:DemoServerApplication.UI.Converters"
             xmlns:localViews="clr-namespace:DemoServerApplication.UI.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:DemoServerApplication.UI.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance vm:DoorManagementViewModel}">
    
    <UserControl.Resources>
        <local:DoorControllerNameConverter x:Key="DoorControllerNameConverter"/>
        <local:CoordinatesConverter x:Key="CoordinatesConverter"/>
    </UserControl.Resources>

    <Grid Background="#FFE5E5E5"
          Margin="10,10,10,0">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <localViews:MultiSelectionDataGrid Grid.Row="0"
                  ItemsSource="{Binding Doors}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Extended"
                  SelectedItemsList="{Binding SelectedDoors, Mode=TwoWay}"
                  HorizontalGridLinesBrush="LightGray"
                  VerticalGridLinesBrush="LightGray">

            <localViews:MultiSelectionDataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Door.Name}"
                                    Header="Name"
                                    Width="*"/>

                <DataGridTextColumn Binding="{Binding Door.DoorControllerId, Converter={StaticResource DoorControllerNameConverter}}"
                                    Header="Door controller"
                                    Width="Auto"/>

                <DataGridCheckBoxColumn Binding="{Binding Door.IsAccessAllowed}"
                                        Header="Is access allowed"
                                        Width="Auto"/>
                
                <DataGridCheckBoxColumn Binding="{Binding Door.HasRexButton}"
                                        Header="Has REX button"
                                        Width="Auto"/>
                
                <DataGridCheckBoxColumn Binding="{Binding Door.LockCommandSupported}"
                                        Header="Lock command supported"
                                        Width="Auto"/>
                
                <DataGridCheckBoxColumn Binding="{Binding Door.UnlockCommandSupported}"
                                        Header="Unlock command supported"
                                        Width="Auto"/>
                <DataGridTextColumn Binding="{Binding Door.Latitude, Converter={StaticResource CoordinatesConverter}}"
                                        Header="Latitude"
                                        Width="Auto"/>
                <DataGridTextColumn Binding="{Binding Door.Longitude, Converter={StaticResource CoordinatesConverter}}"
                                        Header="Longitude"
                                        Width="Auto"/>
            </localViews:MultiSelectionDataGrid.Columns>
        </localViews:MultiSelectionDataGrid>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center">
                <Hyperlink Command="{Binding OpenDoorControllersOptionsCommand}"> Door controllers options </Hyperlink>
            </Label>

            <StackPanel Orientation="Horizontal"
                        Grid.Column="1"
                    
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right">

                <Button Content="Add" 
                    Margin="0,0,10,0" 
                    MinWidth="80"
                    Command="{Binding AddDoorCommand}"/>

                <Button Content="Add multiple" 
                    MinWidth="80"
                    Margin="0,0,10,0" 
                    Command="{Binding AddMultipleDoorsCommand}"/>

                <Button Content="Delete selected" 
                    Margin="0,0,10,0" 
                    MinWidth="80"
                    Command="{Binding DeleteDoorCommand}"/>

                <Button Content="Edit selected" 
                    MinWidth="80"
                    Command="{Binding EditDoorCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
