<UserControl x:Class="DemoServerApplication.UI.Views.CredentialHolderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <Grid>
        <Border CornerRadius="10" 
                Margin="2" 
                Background="LightBlue">
            
            <Grid Margin="5"
                  Height="130">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="160"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        CornerRadius="10" 
                        BorderThickness="1" 
                        BorderBrush="Black" 
                        Background="Black">
                    
                    <Image Source="{Binding Picture}"
                           VerticalAlignment="Stretch" 
                           HorizontalAlignment="Stretch"
                           MaxHeight="120"
                           MaxWidth="120"/>
                </Border>

                <StackPanel Grid.Column="1"
                      Margin="10,0,0,0">

                    <TextBlock Text="Name" 
                               FontStyle="Italic"/>
                    
                    <TextBlock Text="{Binding CredentialHolder.Name}"                        
                               VerticalAlignment="Top"
                               FontWeight="Bold"
                               FontSize="16"/>
                    
                    <TextBlock Text="Card ID" 
                               FontStyle="Italic"
                               Margin="0,5,0,0"/>

                    <TextBlock Text="{Binding CredentialHolder.CardId}"
                               FontWeight="Bold"/>

                    <TextBlock Text="Department" 
                               FontStyle="Italic"
                               Margin="0,5,0,0"/>

                    <TextBlock Text="{Binding CredentialHolder.Department}"
                               FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
